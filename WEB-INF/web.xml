<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>

    <display-name>Hello, World Application</display-name>
    <description>
  This is a simple web application with a source code organization
  based on the recommendations of the Application Developer's Guide.
    </description>

    <!-- LOGIN -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>LoginSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!-- REGISTER -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>RegisterSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>   

   <!-- Edit -->
    <servlet>
        <servlet-name>Edit</servlet-name>
        <servlet-class>EditSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Edit</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>   

    <!-- Disable Account -->
    <servlet>
        <servlet-name>Disable</servlet-name>
        <servlet-class>Disable</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Disable</servlet-name>
        <url-pattern>/disable</url-pattern>
    </servlet-mapping> 

    <!-- LOGOUT -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>LogoutSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>       


    <!-- NEW CHATROOM -->
    <servlet>
        <servlet-name>NewChatRoom</servlet-name>
        <servlet-class>NewChatRoomSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewChatRoom</servlet-name>
        <url-pattern>/new_chatroom</url-pattern>
    </servlet-mapping>      


    <!-- DATABASE -->
    <servlet>
        <servlet-name>DatabaseInitializer</servlet-name>
        <servlet-class>DatabaseInitializer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <!-- PM -->
    <servlet>
      <servlet-name>PM</servlet-name>
      <servlet-class>PMSv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PM</servlet-name>
        <url-pattern>/pm</url-pattern>
    </servlet-mapping>   

</web-app>
